{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "API de Eventos",
        "description": "API para administrar Eventos",
        "contact": {
            "name": "Vanessa Morales",
            "email": "vnss.morales@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local de desarrollo"
        }
    ],
    "paths":{
        "/events/create": {
            "post": {
                "sumary": "Crear un evento",
                "description": "Crea un nuevo evento en la base de datos",
                "requestBody": {
                    "description": "Datos del evento",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Event"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Evento creado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error en la solicitud",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }

            }
        },
        "/events/{id}": {
            "get": {
                "sumary": "Obtener un evento por su id",
                "description": "Obtiene un evento especifico de la base de datos por su id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del evento",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Evento encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Evento no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "sumary": "Actualizar un evento por su id",
                "description": "Actualiza un evento especifico de la base de datos por su id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del evento",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Datos del evento a actualizar",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Event"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Evento actualizado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Evento no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "sumary": "Actualizar un evento por su id",
                "description": "Actualiza un evento especifico de la base de datos por su id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del evento",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Datos del evento a actualizar",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Event"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Evento actualizado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Evento no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }

            },
            "delete": {
                "sumary": "Eliminar un evento por su id",
                "description": "Elimina un evento especifico de la base de datos por su id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del evento",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Evento eliminado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Evento no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/events": {
            "get": {
                "sumary": "Obtener todos los eventos",
                "description": "Obtiene todos los eventos de la base de datos",
                "responses": {
                    "200": {
                        "description": "Eventos encontrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Event"
                                    }
                                }
                            }
                        }
                    },
                "404": {
                    "description": "No se encontraron eventos",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            }
        }
      }  
    },
    "components": {
        "schemas": {
            "Event": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "description": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "place": {
                        "type": "number"
                    },
                    "price": {
                        "type": "number"
                    },
                    "capacity": {
                        "type": "number"
                    },
                    "assistance": {
                        "type": "number"
                    },
                    "estimate": {
                        "type": "number"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            }
        }
    }

}
